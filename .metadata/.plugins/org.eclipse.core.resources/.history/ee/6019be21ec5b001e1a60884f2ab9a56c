package com.krakedev.test;

import com.krakedev.demo.Producto;

public class TestProducto {

	public static void main(String[] args) {
		// Instanciar un objeto Producto usando el constructor que recibe código y
		// nombre
		Producto producto = new Producto(123, "Producto A");

		// Modificar la descripción y el peso
		producto.setDescripcion("Descripción del Producto A");
		producto.setPeso(0.5);

		// Mostrar los valores en pantalla
		System.out.println("Código: " + producto.getCodigo());
		System.out.println("Nombre: " + producto.getNombre());
		System.out.println("Descripción: " + producto.getDescripcion());
		System.out.println("Peso: " + producto.getPeso());
	}
}
